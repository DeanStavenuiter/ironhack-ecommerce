<h1>checkout page</h1>
<% let subtotal = 0 %>

<div class="container d-flex justify-content-between">
  <% user.cart.forEach(item => { %>
  <div class="card" style="width: 18rem">
    <img
      class="card-img-top img-fluid rounded"
      src="<%= item.product.images[0] %>"
      alt="<%= item.product.title %>"
    />
    <div class="card-body">
      <h5 class="card-title"><%= item.product.title %></h5>
      <p>Size: <%= item.product.size %></p>
      <p>Price: <%= item.product.price %></p>
      <p>Qty: <%= item.amount %></p>
      <% let itemPrice = item.product.price * item.amount %>
      <p>€ <%= Number.parseFloat(itemPrice).toFixed(2) %></p>
      <% subtotal += itemPrice %>
    </div>
  </div>
  <% }) %>
</div>

<div>
  <p>€ <%= Number.parseFloat(subtotal).toFixed(2) %></p>
  <form method="POST" action="/checkout/success">
    <input type="number" name="subtotal" value="<%= Number.parseFloat(subtotal).toFixed(2) %>" hidden>
    <button type="submit">Pay now</button>
  </form>
</div>
